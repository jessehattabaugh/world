{
	"devDependencies": {
		"@lhci/cli": "latest",
		"@playwright/test": "latest",
		"@types/xml2js": "latest",
		"commander": "latest",
		"cross-env": "latest",
		"eslint": "latest",
		"eslint-plugin-compat": "latest",
		"globals": "latest",
		"heapsnapshot-parser": "latest",
		"microtime": "latest",
		"node-fetch": "latest",
		"npm-run-all": "^4.1.5",
		"rimraf": "^4.0.0",
		"serve": "latest",
		"xml2js": "latest"
	},
	"scripts": {
		"build": "echo 'build not implemented'",
		"start": "npx serve ./www --listen 3000",
		"dev": "serve ./www --listen 3000",
		"test": "playwright test",
		"fix": "npm run lint -- --fix",
		"analyze:lighthouse": "lhci collect --url=http://localhost:3000 --output=html --outputPath=./lighthouse-report.html",
		"ci": "npm-run-all --serial clean lint test:all",
		"ci:prod": "TEST_ENV=production playwright test --project=chromium",
		"ci:staging": "TEST_ENV=staging playwright test",
		"clean": "rimraf **/*.tmp.* test-results playwright-report blob-report",
		"lint": "eslint .",
		"perf": "npm-run-all --serial benchmark monitor analyze",
		"perf:analyze": "npm-run-all --parallel analyze:lighthouse",
		"perf:benchmark": "node bin/benchmark-ecosystem.js",
		"perf:monitor": "node bin/perf-monitor.js",
		"profile": "npm-run-all --serial profile:cpu profile:dev profile:gpu profile:heap profile:start",
		"profile:cpu": "node --prof bin/run-tests.js && node --prof-process isolate-*-v8.log > cpu-profile.txt",
		"profile:dev": "cross-env PROFILE=true npm run dev",
		"profile:gpu": "npm test -- tests/ecosystem/performance.test.js --trace=webgpu",
		"profile:heap": "node --expose-gc --trace-gc bin/run-tests.js > gc-trace.txt",
		"profile:start": "cross-env PROFILE=true npm run start",
		"report": "playwright show-report",
		"shots": "BASE_URL=${BASE_URL:-http://localhost:3000} node bin/screenshots-generate.js",
		"shots:accept": "npm-run-all --serial accept-perf accept-shots",
		"test:all": "npm-run-all --serial clean lint test:e2e test:visual test:perf",
		"test:debug": "npm test -- --debug",
		"test:e2e": "npm test -- tests/ecosystem/",
		"test:memory": "node bin/memory-test.js",
		"test:perf": "npm test -- tests/performance/",
		"test:stress": "cross-env STRESS_TEST=true npm test -- tests/stress/",
		"test:ui": "npm test -- --ui",
		"test:visual": "npm test -- -c playwright.config.js tests/visual/",
		"visual": "npm-run-all --serial shots compare-all accept-all",
		"visual:compare": "npm-run-all --parallel compare-perf compare-shots",
		"visual:update": "npm run shots && npm run accept-all"
	},
	"type": "module"
}
