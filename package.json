{
	"devDependencies": {
		"@eslint/compat": "latest",
		"@eslint/eslintrc": "latest",
		"@eslint/js": "latest",
		"@lhci/cli": "latest",
		"@playwright/test": "latest",
		"@types/xml2js": "latest",
		"eslint": "latest",
		"globals": "latest",
		"node-fetch": "latest",
		"npm-run-all": "latest",
		"rimraf": "latest",
		"serve": "latest",
		"xml2js": "latest"
	},
	"scripts": {
		"accept-all": "npm-run-all --serial accept-perf accept-shots",
		"accept-perf": "node bin/accept-perf.js",
		"accept-shots": "playwright test --update-snapshots",
		"analyze": "lhci collect --url=http://localhost:3000 --output=html --outputPath=./lighthouse-report.html",
		"audit": "lhci autorun --url=http://localhost:3000 --collect.staticDistDir=./www",
		"build": "echo \"No build step - deploying raw source files directly\"",
		"clean": "rimraf **/*.tmp.* test-results playwright-report blob-report",
		"codegen": "playwright codegen http://localhost:3000",
		"compare-all": "npm-run-all --parallel compare-perf compare-shots",
		"compare-perf": "node bin/compare-perf.js",
		"compare-shots": "BASE_URL=${BASE_URL:-http://localhost:3000} node bin/compare-shots.js --output=\"snapshots/diffs/*.tmp.diff.png\"",
		"debug": "playwright test --debug",
		"dev": "serve ./www --listen 3000",
		"diff-report": "npm run compare-all && node bin/generate-diff-report.js",
		"fix": "npm run lint -- --fix",
		"generate:page": "node bin/generate-page.js",
		"generate:tests": "node bin/generate-test-scaffold.js",
		"lint": "eslint .",
		"prod": "TEST_ENV=production playwright test --project=chromium",
		"quick": "npm-run-all --serial clean lint local && npm run report",
		"report": "playwright show-report",
		"run": "node bin/run-tests.js --ci=${CI:-false}",
		"scaffold": "npm-run-all --serial generate:tests",
		"shots": "BASE_URL=${BASE_URL:-http://localhost:3000} node bin/screenshots-generate.js",
		"staging": "TEST_ENV=staging playwright test",
		"start": "npx serve ./www --listen 3000",
		"test": "playwright test",
		"ui": "playwright test --ui",
		"update": "npm run shots && npm run accept-all",
		"url": "BASE_URL=${TEST_URL} playwright test"
	},
	"type": "module",
	"dependencies": {
		"axe-playwright": "^2.1.0"
	}
}
