{
	"devDependencies": {
		"@eslint/compat": "latest",
		"@eslint/eslintrc": "latest",
		"@eslint/js": "latest",
		"@lhci/cli": "latest",
		"@playwright/test": "latest",
		"cross-env": "latest",
		"eslint": "latest",
		"globals": "latest",
		 "node-fetch": "latest",
		"npm-run-all": "latest",
		"rimraf": "latest",
		"serve": "latest"
	},
	"scripts": {
		"analyze": "lhci collect --url=http://localhost:3000 --output=html --outputPath=./lighthouse-report.html",
		"audit": "lhci autorun --collect.staticDistDir=./www",
		"lint": "eslint .",
		"pretest": "node -e \"require('fs').mkdirSync('./snapshots', { recursive: true }); require('fs').mkdirSync('./performance', { recursive: true });\"",
		"shots": "cross-env BASE_URL=${BASE_URL:-http://localhost:3000} node bin/screenshots-generate.js",
		"start": "npx serve ./www --listen 3000",
		"test": "cross-env TEST_ENV=staging playwright test",
		"full": "cross-env NODE_OPTIONS='--max-old-space-size=4096' npm-run-all --continue-on-error --serial clean lint local perf staging prod && npm run report",
		"clean": "node bin/snapshots-clean.js",
		"debug": "playwright test --debug",
		"codegen": "playwright codegen http://localhost:3000",
		"local": "playwright test",
		"perf": "node bin/perf-update.js",
		"prod": "cross-env TEST_ENV=production playwright test --project=chromium",
		"quick": "npm-run-all --serial clean lint local && npm run report",
		"report": "playwright show-report",
		"run": "node bin/run-tests.js --ci=${CI:-false}",
		"staging": "cross-env TEST_ENV=staging playwright test",
		"ui": "playwright test --ui",
		"updperf": "cross-env UPDATE_PERFORMANCE_BASELINE=true playwright test",
		"updshots": "playwright test --update-snapshots",
		"url": "cross-env BASE_URL=${TEST_URL} playwright test"
	},
	"type": "module"
}