{
	"devDependencies": {
		"@eslint/compat": "latest",
		"@eslint/eslintrc": "latest",
		"@eslint/js": "latest",
		"@lhci/cli": "latest",
		"@playwright/test": "latest",
		"cross-env": "latest",
		"eslint": "latest",
		"globals": "latest",
		 "node-fetch": "latest",
		"npm-run-all": "latest",
		"rimraf": "latest",
		"serve": "latest"
	},
	"scripts": {
		"start": "npx serve ./www --listen 3000",
		"test": "cross-env TEST_ENV=staging playwright test",
		"lint": "eslint .",
		"pretest": "node -e \"require('fs').mkdirSync('./snapshots', { recursive: true }); require('fs').mkdirSync('./performance', { recursive: true });\"",
		
		"b-local🧪": "playwright test",
		"b-staging🧪": "cross-env TEST_ENV=staging playwright test",
		"b-prod🧪": "cross-env TEST_ENV=production playwright test --project=chromium",
		"b-url🌐": "cross-env BASE_URL=${TEST_URL} playwright test",
		
		"c-quick🚄": "npm-run-all --serial d-clean🧹 lint b-local🧪 && npm run e-report📋",
		"c-full🏁": "cross-env NODE_OPTIONS='--max-old-space-size=4096' npm-run-all --continue-on-error --serial d-clean🧹 lint b-local🧪 f-perf⚡ b-staging🧪 b-prod🧪 && npm run e-report📋",
		
		"d-clean🧹": "node bin/snapshots-clean.js",
		"d-debug🐛": "playwright test --debug",
		"d-ui👀": "playwright test --ui",
		
		"e-report📋": "playwright show-report",
		
		"f-perf⚡": "node bin/perf-update.js",
		"f-updperf📊": "cross-env UPDATE_PERFORMANCE_BASELINE=true playwright test",
		
		"g-shots📸": "cross-env BASE_URL=${BASE_URL:-http://localhost:3000} node bin/screenshots-generate.js",
		"g-updshots🔄": "playwright test --update-snapshots",
		
		"analyze": "lhci collect --url=http://localhost:3000 --output=html --outputPath=./lighthouse-report.html",
		"audit": "lhci autorun --url=http://localhost:3000 --collect.staticDistDir=./www",
		"z-codegen🧩": "playwright codegen http://localhost:3000",
		"z-run🏃": "node bin/run-tests.js --ci=${CI:-false}"
	},
	"type": "module"
}