{
	"devDependencies": {
		"@eslint/compat": "latest",
		"@eslint/eslintrc": "latest",
		"@eslint/js": "latest",
		"@playwright/test": "latest",
		"cross-env": "latest",
		"eslint": "latest",
		"globals": "latest",
		"lighthouse": "latest",
		"node-fetch": "latest",
		"npm-run-all": "latest",
		"rimraf": "latest",
		"serve": "latest"
	},
	"scripts": {
		"analyze": "lighthouse http://localhost:3000 --output json --output html --output-path ./lighthouse-report.html",
		"lint": "eslint .",
		"pretest": "node -e \"require('fs').mkdirSync('./snapshots', { recursive: true }); require('fs').mkdirSync('./performance', { recursive: true });\"",
		"screenshots": "cross-env BASE_URL=${BASE_URL:-http://localhost:3000} node bin/screenshots-generate.js",
		"start": "npx serve ./www",
		"test": "cross-env TEST_ENV=staging playwright test",
		"test:all": "cross-env NODE_OPTIONS='--max-old-space-size=4096' npm-run-all --continue-on-error --serial test:clean-snapshots lint test:local test:perf test:staging test:prod && npm run test:report",
		"test:clean-snapshots": "node bin/snapshots-clean.js",
		"test:debug": "playwright test --debug",
		"test:generate": "playwright codegen http://localhost:3000",
		"test:local": "playwright test",
		"test:perf": "node bin/perf-update.js",
		"test:prod": "cross-env TEST_ENV=production playwright test --project=chromium",
		"test:quick": "npm-run-all --serial test:clean-snapshots lint test:local && npm run test:report",
		"test:report": "playwright show-report",
		"test:run": "node bin/run-tests.js --ci=${CI:-false}",
		"test:staging": "cross-env TEST_ENV=staging playwright test",
		"test:ui": "playwright test --ui",
		"test:update-performance": "cross-env UPDATE_PERFORMANCE_BASELINE=true playwright test",
		"test:update-snapshots": "playwright test --update-snapshots",
		"test:url": "cross-env BASE_URL=${TEST_URL} playwright test"
	},
	"type": "module"
}